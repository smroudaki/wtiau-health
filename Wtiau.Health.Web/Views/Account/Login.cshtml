@model Wtiau.Health.Web.Models.ViewModels.Model_Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Master.cshtml";
}




<div class="panel panel-default" style="margin: 0 auto 10px auto;max-width:500px;background-color:#222d32">

    <div class="panel-body login">
        <div style="text-align:center">
            <img src="~/Content/Images/logo-uni.png" class="Login-img" style="height:250px;" alt="Alternate Text" />
        </div>


        <div class="Login-content">

            <div id="login">
                <h3 class="text-center" style="">خوش آمدید!</h3>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="login-items">


                        <div class="form-group">
                            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label " })
                            <div class="input-group">
                                <span class=" input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control text-center" } })

                            </div>

                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger", @type = "password" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
                            <div class="input-group">
                                <span class=" input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control text-center" } })

                            </div>

                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group material-switch-body">
                            <label class="pull-left">مرا به خاطر بسپار</label>
                            <div class="material-switch pull-right">
                                @Html.CheckBoxFor(model => model.RemenberMe, htmlAttributes: new { @class = "" })
                                @Html.LabelFor(model => model.RemenberMe, htmlAttributes: new { @class = "label-success" })
                            </div>
                        </div>
                        <br />


                    </div>

                    <input type="submit" name="name" value="ورود" class="btn btn-block  btn-success wtiau-btn-L " />

                }

            </div>

            @*@Html.Partial("_Register")*@


        </div>
    </div>

</div>
@section Scripts{
    <script>
        $(function () {
            $("input[type='hidden']").remove();
        });
    </script>
}





