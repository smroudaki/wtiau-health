@model Wtiau.Health.Web.Models.ViewModels.Model_PortalLogin

@{
    ViewBag.Title = "ورود";
    Layout = "~/Views/Shared/_Portal.cshtml";
}

<div class="panel panel-default" style="margin: 0 auto 10px auto;max-width:500px;background-color:#222d32; Color:whitesmoke">

    <div class="panel-body login">
        <div style="text-align:center">
            <img src="~/Content/Images/logo-uni.png" class="Login-img" style="height:250px;" alt="Alternate Text" />
        </div>
        <br />
        @*<div class="text-center">
            <p>*لطفا برای ورود زبان کیبورد خود را به انگلیسی تغییر دهید</p>
        </div>*@

        <div class="Login-content">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="form-group">
                    @Html.LabelFor(model => model.StudentCode, htmlAttributes: new { @class = "control-label " })
                    <div class="input-group">
                        <span class=" input-group-addon"><i class="glyphicon glyphicon-education"></i></span>
                        @Html.EditorFor(model => model.StudentCode, new { htmlAttributes = new { @class = "form-control text-center" } })

                    </div>

                    @Html.ValidationMessageFor(model => model.StudentCode, "", new { @class = "text-danger", @type = "password" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NationalCode, htmlAttributes: new { @class = "control-label " })
                    <div class="input-group">
                        <span class=" input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.NationalCode, new { htmlAttributes = new { @class = "form-control text-center" } })

                    </div>

                    @Html.ValidationMessageFor(model => model.NationalCode, "", new { @class = "text-danger" })
                </div>

                <input type="submit" name="name" value="ورود" class="btn btn-block  btn-success wtiau-btn-L " />

            }




        </div>
    </div>

</div>


